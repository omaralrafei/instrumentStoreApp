<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayInstrumentFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/display_instrument_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/display_instrument_imageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/display_instrument_textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/display_instrument_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/display_instrument_addToCart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addToCart_button"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>